# Run manually to reformat a file:
# clang-format -i --style=file <file>
Language:        Cpp
BasedOnStyle:  Google

# 访问说明符(public、private等)的偏移, -4不偏移
AccessModifierOffset:	-4

# 大括号换行，只有当BreakBeforeBraces设置为Custom时才有效
BreakBeforeBraces: Custom
BraceWrapping:   
  # class定义后面
  AfterClass:	true
  # 控制语句后面
  AfterControlStatement:	false
  # enum定义后面
  AfterEnum:	true
  # 函数定义后面
  AfterFunction:	true
  # 命名空间定义后面
  AfterNamespace:	true
  # ObjC定义后面
  AfterObjCDeclaration:	false
  # struct定义后面
  AfterStruct:	true
  # union定义后面
  AfterUnion:	true
  # catch之前
  BeforeCatch:	false
  # else之前
  BeforeElse:	false
  # 缩进大括号
  IndentBraces:	false

# 缩进宽度
IndentWidth:	4

# 当参数过多过长时，统一依次换行
AllowAllArgumentsOnNextLine: false

# 函数实参要么都在同一行，要么都各自一行
BinPackArguments: false

# 列长度限制
ColumnLimit: 150

# 连续空行的最大数量
MaxEmptyLinesToKeep: 1